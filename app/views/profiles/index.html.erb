<p id="notice"><%= notice %></p>

<h1>Listing Profiles</h1>

<table>
  <thead>
    <tr>
      <th>Avatar</th>
      <th>User name</th>
      <th>Age</th>
      <th>Gender</th>
      <th>Location</th>
      <th>Intro</th>
      <th>Interest</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= image_tag profile.avatar.url(:medium) %></td>
        <td><%= profile.user_name %></td>
        <td><%= profile.age %></td>
        <td><%= profile.gender %></td>
        <td><%= profile.location %></td>
        <td><%= profile.intro %></td>
        <td><%= profile.interest %></td>
        <!-- <td><%= profile.user %></td> -->
        <!--<td><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Delete', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td><--></-->
      </tr>
    <% end %>
  </tbody>
</table>

